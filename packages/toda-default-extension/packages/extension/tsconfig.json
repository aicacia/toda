{
	"compilerOptions": {
		"importHelpers": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"outDir": "build",
		"declarationDir": "build",
		"strict": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"lib": [
			"ESNext",
			"DOM"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/**/*.test.*",
		"src/**/*.benchmark.*"
	],
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"excludeExternals": true,
		"excludePrivate": true,
		"excludeInternal": true
	}
}