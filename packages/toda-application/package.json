{
	"name": "@toda/application",
	"private": true,
	"version": "0.0.0",
	"description": "The Everything Application",
	"author": "Nathan Faucett",
	"license": "(MIT OR Apache-2.0)",
	"readmeFilename": "README.md",
	"type": "module",
	"scripts": {
		"tauri": "tauri",
		"vite": "vite",
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"start": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build",
		"desktop": "tauri dev",
		"desktop:build": "tauri build",
		"android": "tauri android dev --open",
		"android:build": "tauri android build",
		"ios": "tauri ios dev --open",
		"ios:build": "tauri ios build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@inlang/paraglide-js": "1.11.8",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.10.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@tauri-apps/cli": "^2.1.0",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.5.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.19.10",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0",
		"vite": "^6.1.0",
		"vitest": "^3.0.5"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.23",
		"@inlang/paraglide-sveltekit": "^0.15.5",
		"@svelte-put/clickoutside": "^4.0.0",
		"@tauri-apps/api": "^2.2.0",
		"@tauri-apps/plugin-fs": "^2.2.0",
		"@toda/core": "workspace:todo-core",
		"@toda/default-extension": "workspace:todo-default-extension",
		"eventemitter3": "^5.0.1",
		"lucide-svelte": "^0.468.0",
		"svelte-portal": "^2.2.1",
		"tauri-plugin-hypergraphsql": "https://github.com/aicacia/tauri-plugin-hypergraphsql.git#32a18df",
		"uuid": "^11.0.5"
	}
}