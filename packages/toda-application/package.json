{
	"name": "@toda/application",
	"private": true,
	"version": "0.0.0",
	"description": "The Everything Application",
	"author": "Nathan Faucett",
	"license": "(MIT OR Apache-2.0)",
	"readmeFilename": "README.md",
	"type": "module",
	"scripts": {
		"tauri": "tauri",
		"vite": "vite",
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"start": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build",
		"desktop": "tauri dev",
		"desktop:build": "tauri build",
		"android": "tauri android dev --open",
		"android:build": "tauri android build",
		"ios": "tauri ios dev --open",
		"ios:build": "tauri ios build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run",
		"postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@inlang/paraglide-js": "^2.0.13",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.3",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "4.1.8",
		"@tauri-apps/cli": "^2.5.0",
		"@types/node": "^22.15.30",
		"@toda/extension": "workspace:todo-extension",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.1",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"svelte": "^5.33.18",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1",
		"vite": "^6.3.5",
		"vitest": "^3.2.3"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.25",
		"@svelte-put/clickoutside": "^4.0.0",
		"@tauri-apps/api": "^2.5.0",
		"@tauri-apps/plugin-fs": "^2.3.0",
		"@toda/core": "workspace:todo-core",
		"eventemitter3": "^5.0.1",
		"lucide-svelte": "^0.513.0",
		"svelte-portal": "^2.2.1",
		"tauri-plugin-hypergraphsql": "https://github.com/aicacia/tauri-plugin-hypergraphsql.git#32a18df",
		"uuid": "^11.1.0"
	}
}